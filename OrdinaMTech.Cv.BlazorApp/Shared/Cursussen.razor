@if (cursussen != null)
{
    <section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="courses">
        <div class="w-100">
            <h2 class="mb-5">Cursussen</h2>
            @foreach (var cursus in cursussen)
            {
                <div key=@cursus.Id class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                    <div class="resume-content">
                        <h3 class="mb-0">@cursus.Naam</h3>
                        <div class="subheading mb-3">@cursus.Instituut</div>
                        <div>Certificaat: @(cursus.Certificaat == null ? "N.v.t." : (cursus.Certificaat.Value  ? "Ja" : "Nee"))</div>
                    </div>
                    <div class="resume-date text-md-right">
                        <span class="text-primary">@cursus.Datum.ToString("MM/yyyy")</span>
                    </div>
                </div>
            }
        </div>
    </section>
    <hr class="m-0" />
}

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public List<OrdinaMTech.Cv.Data.Models.Cursus> cursussen { get; set; }
}
